{
    "name": "@halloffame12/portfolify",
    "version": "1.0.6",
    "description": "One-command portfolio generator for developers",
    "main": "dist/index.js",
    "bin": {
        "portfolify": "dist/index.js"
    },
    "type": "module",
    "scripts": {
        "copy-templates": "node -e \"const fs = require('fs-extra'); fs.copySync('../template', './templates', { filter: (src) => !src.includes('node_modules') && !src.includes('dist') })\"",
        "prebuild": "npm run copy-templates",
        "dev": "tsx src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js"
    },
    "files": [
        "dist",
        "templates"
    ],
    "keywords": [
        "portfolio",
        "generator",
        "cli",
        "developer"
    ],
    "author": "Sumit <halloffame12>",
    "license": "MIT",
    "dependencies": {
        "chalk": "^5.3.0",
        "commander": "^11.1.0",
        "inquirer": "^9.2.12",
        "ora": "^7.0.1",
        "ejs": "^3.1.9",
        "fs-extra": "^11.2.0",
        "validate-npm-package-name": "^5.0.0"
    },
    "devDependencies": {
        "@types/node": "^20.10.6",
        "@types/inquirer": "^9.0.7",
        "@types/ejs": "^3.1.5",
        "@types/fs-extra": "^11.0.4",
        "@types/validate-npm-package-name": "^4.0.2",
        "typescript": "^5.3.3",
        "tsx": "^4.7.0"
    }
}
